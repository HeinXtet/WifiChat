<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WifiChat" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPurpleLight</item>
        <item name="colorPrimaryDark">@color/colorPurpleDark</item>
        <item name="colorAccent">@color/colorButtonActive</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.WifiChat.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@drawable/button_state</item>
        <item name="fontFamily">@font/cousine_regular</item>
    </style>


    <style name="EditText">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:padding">@dimen/space20</item>
        <item name="android:background">@drawable/bg_top_grey</item>
        <item name="fontFamily">@font/cousine_regular</item>
    </style>


    <style name="PopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/cousine_bold</item>
    </style>


    <style name="Theme.WifiChat.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/cousine_regular</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Theme.WifiChat.Header" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/cousine_bold</item>
    </style>



</resources>